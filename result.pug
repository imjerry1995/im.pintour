body
	<!-- 最外圍 -->
	div.wrapper
		
		header
		
			nav.navbar.navbar-default

				div.container-fluid

					div.navbar-header

						<!-- RWD 漢堡圖示 -->
						button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#navbarNav',aria-expended='false')
							span.icon-bar
							span.icon-bar
							span.icon-bar
						<!-- Logo -->
						a.navbar-brand(href='index.html')
							img.navbar-logo(src='images/logo.svg')

					<!-- Menu -->
						div.collapse.navbar-collapse#navbarNav
							ul.nav.navbar-nav
								li
									a(href='#') 
										i.fa.fa-map(aria-hidden="true")
										| 拼圖吧 
								li
									a(href='#')
										i.fa.fa-map-marker(aria-hidden="true")
										| 找拼途

							<!-- 使用者區 -->

							ul.nav.navbar-nav.navbar-right.nav-user
								li
									a(href='login.html') 登入

							<!-- Menu 搜尋欄 -->
							form.navbar-form.navbar-right
								div.form-group
									input.form-control(type='text',placeholder='找拼圖、找拼途')
								button.btn.btn-default(type='submit')
									span.glyphicon.glyphicon-search(aria-hidden="true")


			
		<!-- 搜尋欄以及篩選器-->
		div.result-search-bar
			div.container
				div.input-group
					input.form-control(type='text',placeholder='台中三天兩夜')
		div.result-filter
			div.container
				div.filter-date
					a.btn.btn-default(href="#", role="button") 文章日期
						span.caret
				div.filter-budget
					a.btn.btn-default(href="#", role="button") 預算
						span.caret
				div.filter-liked
					a.btn.btn-default(href="#", role="button") 收藏數
						span.caret
				div.result-sreach-btn
					button.btn.btn-default(type="submit") Search


		<!--  拼途結果 -->
		section#section1
			div.container
				div.row
					a.pintour-box.hori
